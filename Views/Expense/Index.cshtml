@model IEnumerable<InAndOut.Models.Expense>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-primary">Expenses List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Expense</a>
</p>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemValue)
            </th>
            <th>
                Action
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var expense in Model) {
        <tr>
            <td width="40%">
                @Html.DisplayFor(modelExpense => expense.ItemName)
            </td>
            <td width="30%">
                @Html.DisplayFor(modelItem => expense.ItemValue)
            </td>
            <td width="30%">
                <div class="col-8 text-right ">
                    <a class="btn btn-primary" asp-controller="Expense" asp-action="Update" asp-route-id="@expense.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Expense" asp-action="Delete" asp-route-id="@expense.Id">Delete</a>
                </div>
            </td>

        </tr>
}
    </tbody>
</table>
